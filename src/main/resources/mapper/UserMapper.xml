<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybaits.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.karl.mysecurity.mapper.UserMapper">
    <select id="getUserByUsername" parameterType="java.lang.String" resultType="com.karl.mysecurity.entity.MyUser">
        SELECT * from user WHERE username=#{username}
    </select>
</mapper>